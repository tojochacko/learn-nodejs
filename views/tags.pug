extends layout
include mixins/_storeCard

block content
  .inner
    h2 #{tag}
    ul.tags
      each t in tags
        li.tag
          a.tag__link(href=`/tags/${t._id}` class=(tag === t._id ? 'tag__link--active' : ''))
            span.tag__text #{t._id}
            span.tag__count #{t.count}


    .stores
      each store in stores
        +storeCard(store)